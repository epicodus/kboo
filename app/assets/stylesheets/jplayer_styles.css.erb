.jp-container {
  position:relative;
  display: inline-block;
  width:50px; /* 200 - (2 * 48) */
  height:50px;
  background:url("bgr.jpg") 0 0 no-repeat;
  padding:12px;
  -webkit-tap-highlight-color:rgba(0,0,0,0);  
  float: right;
}


.jp-container :focus {
  border:none;
  outline:0;
}

.jp-buffer-1,
.jp-buffer-2,
.jp-progress-1,
.jp-progress-2 {
  position:absolute;
  top:0;
  left:0;
  width:26px;
  height:26px;
  clip:rect(0px,13px,26px,0px);

  -moz-border-radius:13px;
  -webkit-border-radius:13px;
  border-radius:13px;
}

.jp-buffer-1,
.jp-buffer-2 {
  background:url("buffer.png") 0 0 no-repeat;
}


/* FALLBACK for .progress
 * (24 steps starting from 1hr filled progress, Decrease second value by 104px for next step)
 * (It needs the container selector to work. Or use div)
 */

.jp-container .jp-fallback {
  background:url("progress_sprite.jpg") no-repeat;
  background-position:0 26px; 
}

.jp-progress-1,
.jp-progress-2 {
  background:url("progress.png") 0 0 no-repeat;
}

.jp-buffer-holder,
.jp-progress-holder,
.jp-circle-control {
  position:absolute;
  width:26px;
  height:26px;
} 

.jp-circle-control {
  cursor:pointer;
}

.jp-buffer-holder,
.jp-progress-holder {
  clip:rect(0px,26px,26px,13px);
  display:none;
}


/* This is needed when progress is greater than 50% or for fallback */

.jp-buffer-holder.jp-gt50,
.jp-progress-holder.jp-gt50,
.jp-progress-1.jp-fallback{
  clip:rect(auto, auto, auto, auto);
}

.jp-controls {
  margin:0;
  padding:6px;
}

.jp-controls li{
  list-style-type:none;
  display:block;

  /*IE Fix*/
  position:absolute;
}

.jp-controls li a{
  position:relative;
  display:block;
  width:12px;
  height:12px;
  text-indent:-9999px;
  z-index:1;
  cursor:pointer;
}

.jp-controls .jp-play {
  background:url("controls.jpg") 0 0 no-repeat;
}

.jp-controls .jp-play:hover {
  background:url("controls.jpg") -200px 0 no-repeat;
}

.jp-controls .jp-pause {
  background:url("controls.jpg") 0 -200px no-repeat;
}

.jp-controls .jp-pause:hover {
  background:url("controls.jpg") -200px -200px no-repeat;
}

