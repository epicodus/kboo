<%= @user.email %>
<%= form_for @user do |f| %> 

  <% if current_user.admin? %> 
    <div><%= f.collection_select :role, User::ROLES, :to_s, :humanize %></div>
  <% elsif current_user.staff? %>
    <div><%= f.collection_select :role, 'contributor', :humanize %></div>
  <% end %>  

  <div><%= f.submit 'Update' %></div>
<% end %>