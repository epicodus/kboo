<div class='container'>
  <h3>Create an Episode</h3>
  <table>

    <%= form_for @episode, :html => { :multipart => true } do |f| %>
    <tr> <td> <%= f.label         :program %>            </tr> </td>
    <tr> <td> <%= f.collection_select :program, Program.all, :id, :title, include_blank: :true %> </tr> </td>
    <tr> <td> <%= f.label         :title %>              </tr> </td>
    <tr> <td> <%= f.text_field    :title %>              </tr> </td>
    <tr> <td> <%= f.label         :short_description %>  </tr> </td>
    <tr> <td> <%= f.text_area     :short_description %>  </tr> </td>
    <tr> <td> <%= f.label         :audio_promo %>        </tr> </td>
    <tr> <td> <%= f.text_field    :audio_promo %>        </tr> </td>
    <tr> <td> <%= f.label         :category %>           </tr> </td>
    <tr> <td> <%= f.text_field    :category %>           </tr> </td>
    <tr> <td> <%= f.label         :long_description %>   </tr> </td>
    <tr> <td> <%= f.text_field    :long_description %>   </tr> </td>
    <tr> <td> <%= f.label         :image %>              </tr> </td>    
    <tr> <td> <%= f.file_field    :image %>              </tr> </td>
    <tr> <td> <%= f.submit 'Submit' %>                   </tr> </td>
    
    <% end %> 
  </table>  
</div>