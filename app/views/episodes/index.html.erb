

<div class='hdr_text'>RECENT PROGRAMS</div>
<div class='recent_programs'>
  <% @episodes.each do |episode| %>
    <div class='panel'>
      
      <a value="Play" onclick="updatePlayer('<%= episode.audio_url %>');"> 
        <p class='panel-header'><%= episode.title %></p>
        <h4><%= episode.short_description %></h4>
        <p><%= "Host: #{episode.host}"%></p>
      </a>
    </div>
  <% end %>   
 </div>
 <br>
 <div class='more_btm_text'>More...</div>
</div>


