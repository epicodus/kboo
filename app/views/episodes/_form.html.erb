<div class='form'>
  <%= form_for @episode, :html => { :multipart => true } do |f| %>
    <%= render '/layouts/errors', :object => f.object %>
    <div class='form-group'>
      <%= f.label             :program_id %>            
      <%= f.collection_select(:program_id, Program.all, :id, :title, { include_blank: true }, { class: 'form-control' }) %> 
    </div>
    <div class='form-group'>
      <%= f.label         :title %>              
      <%= f.text_field    :title, autofocus: true, class: 'form-control' %>              
    </div>
    <div class='form-group'>
      <%= f.label         :short_description %>  
      <%= f.text_field    :short_description, class: 'form-control' %>  
    </div>
    <div class='form-group'>
      <%= f.label         :long_description %>   
      <%= f.text_area     :long_description, rows: 3, class: 'form-control' %>   
    </div>
    <div class='form-group'>
      <%= f.label         :image %>                  
      <%= f.file_field    :image %>
    </div> 
    <div class='form-group'>             
      <%= f.submit 'Submit', class: 'btn btn-success' %>                   
    </div>
  <% end %> 
</div>

