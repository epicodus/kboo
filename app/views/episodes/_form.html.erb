<h3>Edit <%= @episode.title %></h3>
<table>
  <%= form_for @episode, :html => { :multipart => true } do |f| %>
    <tr> <td> <%= f.label         :program_id %>            </tr> </td>
    <tr> <td> <%= f.collection_select :program_id, Program.all, :id, :title, include_blank: :true %> </tr> </td>
    <tr> <td> <%= f.label         :title %>              </tr> </td>
    <tr> <td> <%= f.text_field    :title %>              </tr> </td>
    <tr> <td> <%= f.label         :short_description %>  </tr> </td>
    <tr> <td> <%= f.text_field    :short_description %>  </tr> </td>
    <tr> <td> <%= f.label         :long_description %>   </tr> </td>
    <tr> <td> <%= f.text_area     :long_description %>   </tr> </td>
    <tr> <td> <%= f.label         :image %>              </tr> </td>    
    <tr> <td> <%= f.file_field    :image %>              </tr> </td>
    <tr> <td> <%= f.submit 'Submit' %>                   </tr> </td>
  <% end %> 
</table>  