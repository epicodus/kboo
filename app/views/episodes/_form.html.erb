<% if @episode.errors.any? %>
  <div id='error_explanation'>
    <h2><%= pluralize(@episode.errors.count, 'error') %> prohibited this task from being saved:</h2>
    <ul>
      <% @episode.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class='form'>
  <%= form_for @episode, :html => { :multipart => true } do |f| %>
    <div class='form-group'>
      <%= f.label             :program_id %>            
      <%= f.collection_select(:program_id, Program.all, :id, :title, { include_blank: true }, { class: 'form-control' }) %> 
    </div>
    <div class='form-group'>
      <%= f.label         :title %>              
      <%= f.text_field    :title, autofocus: true, class: 'form-control' %>              
    </div>
    <div class='form-group'>
      <%= f.label         :short_description %>  
      <%= f.text_field    :short_description, class: 'form-control' %>  
    </div>
    <div class='form-group'>
      <%= f.label         :long_description %>   
      <%= f.text_area     :long_description, rows: 3, class: 'form-control' %>   
    </div>
    <div class='form-group'>
      <%= f.label         :image %>                  
      <%= f.file_field    :image %>
    </div> 
    <div class='form-group'>             
      <%= f.submit 'Submit', class: 'btn btn-success' %>                   
    </div>
  <% end %> 
</div>

