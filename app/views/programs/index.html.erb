<h1>Programs</h1>

<ul>
<% @programs.each do |program| %>
  <li>
    <span class='program-title'><%= link_to program.title, program %></span>
    <small><%= program.date.to_s[0..9] + " " + program.time.to_s[11..15] %>
    <% if program.category %>
      <em><%= program.category.name %></em></small>
    <% end %>
    <small><%= program.description %></small>
  </li>
<% end %>
</ul>  
